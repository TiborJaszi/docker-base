#!/usr/bin/env bash

wget --no-check-certificate \
     --timeout=10 \
     --tries=3 \
     --user=$CODE_BASIC_AUTH_USER \
     --password=$CODE_BASIC_AUTH_PASSWORD \
     -L \
     $CODE_URL \
     -O /tmp/code.zip && \
mkdir /tmp/code && \
unzip -o /tmp/code.zip -d /tmp/code && \
shopt -s dotglob nullglob && \
mv /tmp/code/*/* /var/www && \
rm -R /tmp/code && \
rm /tmp/code.zip
